{:deps
   {io.github.clojure/tools.build       {:git/tag "v0.7.2" :git/sha "0361dde"}
    io.github.seancorfield/build-clj    {:git/tag "v0.6.3" :git/sha "9b8e09b"}
    com.github.pmonks/lice-comb         {:mvn/version "1.0.44"}
    com.github.pmonks/asf-cat           {:mvn/version "1.0.25"}
    com.github.pmonks/tools-convenience {:mvn/version "1.0.52"}}
 :aliases
   {; ---- TOOL ALIASES ----

    ; clj -T:build <taskname>
    :build
      {:deps       {io.github.seancorfield/build-clj    {:git/tag "v0.6.3" :git/sha "9b8e09b"}
                    com.github.pmonks/pbr               {:mvn/version "2.0.115"}
                    com.github.pmonks/tools-convenience {:mvn/version "1.0.52"}   ; Override whatever PBR pulls in with the latest & greatest
                    com.github.pmonks/tools-licenses    {:local/root "."}}        ; Override whatever PBR pulls in with the latest & greatest
       :ns-default build}


    ; ---- MAIN FUNCTION ALIASES ----

    ; clj -M:check
    :check
      {:extra-deps {com.github.athos/clj-check {:git/sha "518d5a1cbfcd7c952f548e6dbfcb9a4a5faf9062"}}
       :main-opts  ["-m" "clj-check.check"]}

    ; clj -M:kondo
    :kondo
      {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2021.12.16"}}
       :main-opts  ["-m" "clj-kondo.main" "--lint" "src"]}

    ; clj -M:eastwood
    :eastwood
      {:extra-deps {jonase/eastwood {:mvn/version "1.0.0"}}
       :main-opts  ["-m" "eastwood.lint" "{:source-paths,[\"src\"]}"]}

    ; clj -M:outdated
    :outdated
      {:extra-deps {com.github.liquidz/antq {:mvn/version "1.3.0"}}
       :main-opts  ["-m" "antq.core" "--skip=pom" "--exclude=com.github.pmonks/pbr"]}

    ; clj -X:codox
    :codox
      {:extra-deps {codox/codox {:mvn/version "0.10.8"}}
       :exec-fn    codox.main/generate-docs
       :exec-args  {:source-paths ["src"]
                    :source-uri   "https://github.com/pmonks/tools-licenses/blob/main/{filepath}#L{line}"}}
   }}
